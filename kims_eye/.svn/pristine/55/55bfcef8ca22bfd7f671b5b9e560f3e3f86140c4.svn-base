@charset "utf-8";
/* 메인중앙 */
.middle-area {width: 978px; padding: 0; margin-bottom: 29px;}
    .ad {width: 978px; margin: 0 auto;}
    .board {width: 978px; height: 200px; margin: 10px}
        .board-left {width: 305px; height: 180px; margin: 5px; float: left;}
        .board-middle {width: 305px; height: 180px; margin: 5px; float: left;}
        .board-right {width: 305px; height: 180px; margin: 5px; margin-right: 30px; float: right;}
.board h3 {margin: 10px; color: #555; float: left;}
.board .more {float: right;}
.board a {text-decoration: none; color: #000;}
.board .more a {text-decoration: none; color: #555;}
/* 메인 게시판노출 부분 */
.board table {table-layout: fixed; width: 305px; font-size: 12px;border-spacing: 5px;}
.board .col-date {width: 54px;}
.board td + td {color: #777;}
tr {border-spacing: 5px;}
td {padding: 5px; width: 150px;}
td:nth-child(1) {white-space: nowrap; overflow: hidden; text-overflow: ellipsis;}